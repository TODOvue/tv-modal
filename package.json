{
  "name": "@todovue/tv-modal",
  "private": false,
  "author": "Cristhian Daza",
  "description": "A customizable modal component for TODOvue, supporting various sizes, animations, and overlay options.",
  "license": "MIT",
  "version": "1.1.2",
  "type": "module",
  "homepage": "https://ui.todovue.blog/modal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TODOvue/tv-modal.git"
  },
  "bugs": {
    "url": "https://github.com/TODOvue/tv-modal/issues"
  },
  "keywords": [
    "todovue",
    "front-end",
    "web",
    "vue",
    "vuejs",
    "vue-js",
    "modal",
    "show-modal",
    "vue-modal",
    "vue-modal-component"
  ],
  "sideEffects": [
    "*.css",
    "*.scss",
    "dist/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/tv-modal.es.js",
      "require": "./dist/tv-modal.cjs.js"
    },
    "./style.css": "./dist/tv-modal.css",
    "./nuxt": "./nuxt.js"
  },
  "main": "dist/tv-modal.cjs.js",
  "module": "dist/tv-modal.es.js",
  "types": "dist/tv-modal.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "nuxt.js"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "cp README.md public/ && cp CHANGELOG.md public/ && VITE_BUILD_TARGET=demo vite build"
  },
  "peerDependencies": {
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@todovue/tv-demo": "^1.4.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "sass": "^1.97.2",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@todovue/tv-button": "^1.2.4"
  }
}
